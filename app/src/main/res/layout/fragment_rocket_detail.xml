<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A2647"
    tools:context=".View.details.RocketDetailFragment">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="324dp"
        android:layout_height="97dp"
        android:layout_marginTop="57dp"
        android:src="@drawable/spacexlogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/prop1"
        android:layout_width="274dp"
        android:layout_height="62dp"

        android:layout_marginStart="69dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="68dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prop" />

    <TextView
        android:id="@+id/prop2"
        android:layout_width="276dp"
        android:layout_height="54dp"

        android:layout_marginStart="68dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="33dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prop1" />

    <TextView
        android:id="@+id/name"
        android:layout_width="277dp"
        android:layout_height="55dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="67dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#B8A606"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/prop"
        android:layout_width="341dp"
        android:layout_height="193dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="35dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

</androidx.constraintlayout.widget.ConstraintLayout>